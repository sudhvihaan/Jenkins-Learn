@Library('MySharedLibrary') _

pipeline {
    agent {
        label 'jenkins-slave' // This is the agent used for the pipeline
    }

    parameters {
        // String Parameter
        string(defaultValue: "maintainer", description: 'Enter user role:', name: 'userRole')

        // Choice Parameter
        choice(choices: ['DEBUG', 'RELEASE', 'TEST'], description: 'Choose build type', name: 'BUILD_TYPE')

        // Boolean Parameter
        booleanParam(defaultValue: false, description: 'Should we run the tests?', name: 'RUN_TESTS')

        // Text Parameter
        text(defaultValue: '', description: 'Enter a detailed description of the build', name: 'BUILD_DESCRIPTION')

        // Password Parameter
        password(defaultValue: '', description: 'Enter your password', name: 'USER_PASSWORD')

        // File Parameter
        file(description: 'Upload a configuration file', name: 'CONFIG_FILE')

        // Run Parameter
        run(description: 'Pick a previous build from another job', job: 'OtherJob', name: 'PREVIOUS_BUILD')

        // Credentials Parameter
        credentials(description: 'Select credentials for the job', name: 'CREDENTIALS_ID')

        // Git Branch Parameter
        gitParameter(branch: 'origin/*', name: 'main', type: 'PT_BRANCH')

        // Extended Choice Parameter
        extendedChoice(
            name: 'CHOICES',
            description: 'Choose multiple values',
            multiSelectDelimiter: ',',
            type: 'PT_CHECKBOX',
            value: 'OPTION1,OPTION2,OPTION3'
        )
    }

    stages {
        stage('Print Parameter Values') {
            steps {
                script {
                    // Echo String Parameter
                    echo "User Role: ${params.userRole}"

                    // Echo Choice Parameter
                    echo "Build Type: ${params.BUILD_TYPE}"

                    // Echo Boolean Parameter
                    echo "Run Tests: ${params.RUN_TESTS}"

                    // Echo Text Parameter
                    echo "Build Description: ${params.BUILD_DESCRIPTION}"

                    // Echo Password Parameter (use with caution in real environments)
                    echo "User Password (masked): ********"

                    // Echo File Parameter
                    if (params.CONFIG_FILE) {
                        echo "Config File: ${params.CONFIG_FILE}"
                    }

                    // Echo Run Parameter
                    echo "Previous Build: ${params.PREVIOUS_BUILD}"

                    // Echo Credentials Parameter
                    echo "Credentials ID: ${params.CREDENTIALS_ID}"

                    // Echo Git Branch Parameter
                    echo "Git Branch: ${params.GIT_BRANCH}"

                    // Echo Extended Choice Parameter
                    echo "Selected Choices: ${params.CHOICES}"
                }
            }
        }
    }
}

